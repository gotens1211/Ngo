  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    body{font-family: 'Open Sans', sans-serif; background:#f8f8f8}
    .input-group textarea{height:120px !important}
    .input-group{margin-bottom:10px}
    .sub-heading{font-size:24px; color:#666; padding-bottom:10px; border-bottom:solid 1px #ccc; margin-bottom:15px}
    .input-group-addon,.form-control{border-radius:0px !important}
    .input-group-addon{color:#06C}
    .c-info .glyphicon{width:20px; text-align:left; color:#099}
    .c-info p{margin:0; padding:0; margin-bottom:20px; color:#666}
    .alert{border-radius:0px}
    </style>
  </head>
  <body>
    <div class="container">

      <div class="col-md-4 c-info">
        <h2 class="sub-heading">Office Location</h2>
        <p><i class="glyphicon glyphicon-map-marker"></i>Akashpuram, Bareilly, India, 243005</p>
        <p><i class="glyphicon glyphicon-phone"></i> +00 0123456789</p>
        <p><i class="glyphicon glyphicon-envelope"></i> email@example.com</p>
        <p></p>
        <p></p>
      </div>

      <div class="col-md-8">
        <h2 class="sub-heading">Contact Us Form</h2>


        <%= form_for(@contact) do |f| %>
        <div class="input-group input-group-lg">
          <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :name ,class: "form-control" ,placeholder: "Your Good Name"%>
        </div>

        <div class="input-group input-group-lg">
          <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
          <%= f.email_field :email_id,class: "form-control" ,placeholder: "Your Working Email"%>        </div>

          <div class="input-group input-group-lg">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-earphone"></i></span>
            <%= f.phone_field :phone,class: "form-control" ,placeholder: "Your Phone Number"%>
          </div>

          <div class="input-group input-group-lg">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-education"></i></span>
            <%= f.text_field :subject ,class: "form-control" ,placeholder: "Subject"%>
          </div>

          <div class="input-group input-group-lg">
            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-pencil"></i></span>
            <%= f.text_area :requirement,class: "form-control" , placeholder: "Your Requirement" %>
          </div>

          <div class="input-group input-group-lg">
            <%= f.submit "Contact Us",class: "form-control btn-primary"%>
          </div>
          <% end %>

          <% if @contact.errors.any? %>
          <div class="row">
            <div class="col-md-10 col-md-offset-2">
              <div class="panel panel-danger">
                <div class="panel-heading">
                  <div id="error_explanation">
                    <h2 class=" panel-title"><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being send:</h2>

                    <ul>
                      <div class="panel-body">
                        <% @contact.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>



          </div>


        </div>