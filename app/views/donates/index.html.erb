<div class="container">
<h1 align="center">The ones who made the right choice</h1>
<div class="row">
<div >
  <table class="table table-bordered ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Email Id</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @donate.each do |donate| %>
      <tr>
        <td><%= donate.name %></td>
        <td><%= donate.amount%></td>
        <td><%= donate.email_id%></td>
        <td><%= link_to "Show",donate_path(donate)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<%= link_to "Donate", new_donate_path ,class: "col-md-5 col-md-offset-3 btn btn-success"%>
</div>
