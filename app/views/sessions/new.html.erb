  <div class="container" style="height:100%; width:100%; background: rgba(205, 255, 245, 0.168627);">
    <div class="col-md-4 col-sm-8 col-xs-12" style="position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%,-75%)">
     <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Log In</h3>
      </div>
      <div class="panel-body">
       <%= form_for(:session) do |f|%>
       <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-user"></i></span>
        <%= f.text_field :name ,class: "form-control" ,placeholder: "Your Good Name"%>
      </div></br> 
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-pencil"></i></span>
        <%= f.password_field :password,class: "form-control" ,placeholder: "Password"%>
      </div></br>
      <%= f.submit "Login",class: "form-control btn-success"%>
      <% end %>
    </div>
  </div>
  <%= link_to 'Go back',root_path%>
</div>
