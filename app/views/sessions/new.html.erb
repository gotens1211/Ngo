<div class="col-md-5 well wl">
  <h2 align="center">Login</h2>


  <%= form_for(:session) do |f| %>
  <div class="input-group input-group-lg">
    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-user"></i></span>
    <%= f.text_field :name ,class: "form-control" ,placeholder: "Your Good Name"%>
  </div>

  <div class="input-group input-group-lg">
    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-pencil"></i></span>
    <%= f.password_field :password,class: "form-control" ,placeholder: "Password"%></div>

    <div class="pull-right">
      <%= f.submit "Login",class: "form-control"%>
    </div>
    <% end %>
  </div>
</div>
